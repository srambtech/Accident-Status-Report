<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="#fffefe"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BASIC DETAILS"
            android:id="@+id/textView2"
            android:textSize="40sp"
            android:textColor="#0ea221" />


    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="District"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:entries="@array/city"
                android:spinnerMode="dialog"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="RTO Unit Office"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                android:entries="@array/cbe"
                android:spinnerMode="dialog"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Crime Number"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText10"
                android:textColor="#010302"
                android:textSize="20sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Police Station"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText9"
                android:textColor="#010302"
                android:textSize="20sp" />



            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loc"
                android:textColor="#010302"
                android:textSize="20sp" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="25sp"
                android:id="@+id/dateText1" android:text="Accident Date"
                android:textColor="#3da682" />
            <TableLayout android:layout_height="match_parent"
                android:layout_width="wrap_content" android:id="@+id/tableLayout1">
                <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText android:text="EditText" android:layout_height="wrap_content"
                        android:id="@+id/dateDisplay" android:layout_width="200sp"
                        android:inputType="date" android:textStyle="bold" android:enabled="false"
                        android:textColor="#000000" />
                    <Button android:layout_width="wrap_content" android:id="@+id/pickDate"
                        android:textSize="12sp" android:text="Change Date"
                        android:layout_height="wrap_content"
                        android:background="#3da682"
                        android:textColor="#ffffff" />
                </TableRow>
            </TableLayout>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="25sp"
                android:id="@+id/dateText" android:text="Submitted Time"
                android:textColor="#3da682" />
            <TableLayout android:layout_height="match_parent"
                android:layout_width="wrap_content" android:id="@+id/tableLayout3">
                <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText android:text="EditText" android:layout_height="wrap_content"
                        android:id="@+id/timeDisplay" android:layout_width="200sp"
                        android:inputType="date" android:textStyle="bold" android:enabled="false"
                        android:textColor="#000000" />
                    <Button android:layout_width="wrap_content" android:id="@+id/pickTime"
                        android:textSize="12sp" android:text="Change Time"
                        android:layout_height="wrap_content"
                        android:background="#3da682"
                        android:textColor="#ffffff" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Fatal Count"
                android:id="@+id/textView16"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sub"
                android:textColor="#010302"
                android:textSize="20sp" />









        </LinearLayout>


    </ScrollView>

</LinearLayout>
