<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="#fffefe"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:id="@+id/as">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mini Report"
            android:id="@+id/textView2"
            android:textSize="40sp"
            android:textColor="#0ea221" />


    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Crime Number"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"

                android:id="@+id/cno"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#010403" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Police Station"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"

                android:id="@+id/pst"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#010403" />




            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Location"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="80sp"

                android:id="@+id/loc"
                android:layout_gravity="center_horizontal"
                android:textSize="23sp"
                android:textColor="#000101" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Accident Date"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"

                android:id="@+id/acdate"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000101" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Fatal Count"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"

                android:id="@+id/noi"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#010101" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="View GPS"
                android:id="@+id/button18"
                android:layout_gravity="right"
                android:textColor="#ffffff"
                android:background="#3da682" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="View Images"
                android:id="@+id/button5"
                android:background="#3da682"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="View Videos"
                android:id="@+id/button6"
                android:background="#3da682"
                android:textColor="#ffffff" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
