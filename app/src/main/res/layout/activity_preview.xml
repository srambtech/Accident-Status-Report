<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:background="#fffefe"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PREVIEW"
            android:id="@+id/prv"
            android:textSize="40sp"
            android:textColor="#0ea221" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:layout_gravity="right" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="BASIC DETAILS"
                android:id="@+id/subtitle1"
                android:layout_gravity="center_horizontal"
                android:textSize="28sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="District"
                android:id="@+id/textView1"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/dis"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="RTO Unit Office"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/rto"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Crime Number"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/cno"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Police Station"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/pst"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Location"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/loc"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Accident Date"
                android:id="@+id/te"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/sdate"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Accident time"
                android:id="@+id/texi"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/stime"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:text="Fatal Count"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#3da682" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:id="@+id/sub"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textColor="#000000" />


            <Button android:id="@+id/submit" style="?android:textAppearanceSmall"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="16dp" android:text="SUBMIT"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:background="#3da682"
                android:layout_gravity="center" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
